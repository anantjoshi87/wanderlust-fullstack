<% layout("/layouts/boilerplate") %>

<div class="min-h-[80vh] flex items-center justify-center px-6">
  <div class="max-w-2xl text-center">
    
    <!-- Illustration / Visual -->
    <div class="flex justify-center mb-6">
      <div class="h-40 w-40 rounded-full bg-rose-100 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-rose-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
            d="M9 20l-5.447-2.724A2 2 0 013 15.382V6.618a2 2 0 011.553-1.946L9 2m6 18l5.447-2.724A2 2 0 0021 15.382V6.618a2 2 0 00-1.553-1.946L15 2m-6 18V2m6 18V2" />
        </svg>
      </div>
    </div>

    <!-- Text -->
    <h1 class="text-5xl font-extrabold text-gray-900 mb-4">404</h1>
    <p class="text-xl font-semibold text-gray-700 mb-2">
      Looks like you’re lost
    </p>
    <p class="text-gray-500 mb-8">
      The place you’re looking for doesn’t exist or was moved.
    </p>

    <!-- Actions -->
    <div class="flex justify-center gap-4">
      <a href="/"
        class="px-6 py-3 rounded-xl bg-rose-500 text-white font-medium hover:bg-rose-600 transition">
        Go Home
      </a>

      <a href="/listings"
        class="px-6 py-3 rounded-xl border border-gray-300 text-gray-700 font-medium hover:bg-gray-100 transition">
        Explore Listings
      </a>
    </div>

  </div>
</div>
